{
  "name": "dev-utils",
  "version": "1.0.0",
  "description": "Internal client-side only developer utilities",
  "main": "index.html",
  "scripts": {
    "start:dev": "tsc --noCheck && npm run copy-files && http-server dist -p 8080",
    "start": "http-server dist -p 8080",
    "build": "tsc --noCheck && npm run copy-files",
    "copy-files": "cp -r src/*.html src/*.css src/wasm src/wasm/**/*.wasm dist/",
    "test": "tsx --test tests/*.test.ts"
  },
  "author": "",
  "type": "module",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/node": "^22.13.10",
    "http-server": "^14.1.1",
    "typescript": "^5.3.3"
  }
}
